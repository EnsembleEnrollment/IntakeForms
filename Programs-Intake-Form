    <div class="toast" id="toast">
        <i class="fas fa-check-circle toast-icon"></i>
        <span class="toast-message">Success!</span>
    </div>

    <script>
        let programs = [];
        let activeProgramIndex = 0;

        document.addEventListener('DOMContentLoaded', () => {
            addProgram(); // Start with one program
        });

        function addProgram() {
            const program = {
                id: Date.now(),
                name: '',
                classSize: '',
                duration: '',
                frequency: '',
                status: 'active',
                price: '',
                priceType: '',
                registrationFee: '',
                registrationFeeCovers: '',
                enrollmentType: '',
                enrollmentProcess: '',
                midSemesterEnrollment: false,
                midSemesterPolicy: '',
                midSemesterPriceChange: '',
                skillLevel: '',
                qualifications: '',
                curriculumDetails: '',
                makeupPolicy: '',
                withdrawalPolicy: '',
                firstFreeLeason: false,
                parentGuardianRequired: false,
                additionalPolicies: '',
                schedulingLink: '',
                flyerLink: '',
                websiteDescriptionLink: ''
            };
            
            programs.push(program);
            activeProgramIndex = programs.length - 1;
            renderPrograms();
            showToast('Program added!', 'success');
        }

        function removeProgram(index) {
            if (programs.length === 1) {
                showToast('You must have at least one program', 'error');
                return;
            }
            if (!confirm('Delete this program?')) return;
            
            programs.splice(index, 1);
            if (activeProgramIndex >= programs.length) {
                activeProgramIndex = programs.length - 1;
            }
            renderPrograms();
            showToast('Program removed', 'success');
        }

        function toggleProgram(index) {
            activeProgramIndex = activeProgramIndex === index ? -1 : index;
            renderPrograms();
        }

        function renderPrograms() {
            const container = document.getElementById('programsContainer');
            
            container.innerHTML = programs.map((program, index) => `
                <div class="program-card ${activeProgramIndex === index ? 'active' : ''}" data-index="${index}">
                    <div class="program-card-header" onclick="toggleProgram(${index})">
                        <h3>
                            <span class="program-number">#${index + 1}</span>
                            ${program.name || 'Untitled Program'}
                        </h3>
                        <div class="program-card-actions">
                            <button onclick="event.stopPropagation(); duplicateProgram(${index})" title="Duplicate">
                                <i class="fas fa-copy"></i>
                            </button>
                            <button class="delete" onclick="event.stopPropagation(); removeProgram(${index})" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    <div class="program-card-body">
                        <div class="section-tabs">
                            <button type="button" class="section-tab active" onclick="switchTab(${index}, 'basic', this)">Basic Info</button>
                            <button type="button" class="section-tab" onclick="switchTab(${index}, 'pricing', this)">Pricing</button>
                            <button type="button" class="section-tab" onclick="switchTab(${index}, 'enrollment', this)">Enrollment</button>
                            <button type="button" class="section-tab" onclick="switchTab(${index}, 'details', this)">Details</button>
                            <button type="button" class="section-tab" onclick="switchTab(${index}, 'policies', this)">Policies</button>
                            <button type="button" class="section-tab" onclick="switchTab(${index}, 'links', this)">Links</button>
                        </div>

                        <!-- Basic Info -->
                        <div class="section-content active" data-section="basic">
                            <div class="form-group">
                                <label class="form-label">Program Name *</label>
                                <input type="text" class="form-input" value="${program.name}" 
                                    onchange="updateProgram(${index}, 'name', this.value)" 
                                    placeholder="e.g., Private Piano Lessons">
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <label class="form-label">Class Size</label>
                                    <input type="text" class="form-input" value="${program.classSize}" 
                                        onchange="updateProgram(${index}, 'classSize', this.value)" 
                                        placeholder="e.g., 1-on-1, Max 6 students">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Lesson Duration</label>
                                    <input type="text" class="form-input" value="${program.duration}" 
                                        onchange="updateProgram(${index}, 'duration', this.value)" 
                                        placeholder="e.g., 30, 45, or 60 min">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <label class="form-label">Lesson Frequency</label>
                                    <input type="text" class="form-input" value="${program.frequency}" 
                                        onchange="updateProgram(${index}, 'frequency', this.value)" 
                                        placeholder="e.g., Weekly, Twice a week">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" onchange="updateProgram(${index}, 'status', this.value)">
                                        <option value="active" ${program.status === 'active' ? 'selected' : ''}>Active</option>
                                        <option value="inactive" ${program.status === 'inactive' ? 'selected' : ''}>Inactive</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Pricing -->
                        <div class="section-content" data-section="pricing">
                            <div class="form-row">
                                <div class="form-group">
                                    <label class="form-label">Price</label>
                                    <input type="text" class="form-input" value="${program.price}" 
                                        onchange="updateProgram(${index}, 'price', this.value)" 
                                        placeholder="e.g., $150">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Billing Type</label>
                                    <select class="form-select" onchange="updateProgram(${index}, 'priceType', this.value)">
                                        <option value="">Select type</option>
                                        <option value="Monthly" ${program.priceType === 'Monthly' ? 'selected' : ''}>Monthly (Recurring)</option>
                                        <option value="Semester" ${program.priceType === 'Semester' ? 'selected' : ''}>Per Semester (Upfront)</option>
                                        <option value="Per Class" ${program.priceType === 'Per Class' ? 'selected' : ''}>Per Class</option>
                                        <option value="Package" ${program.priceType === 'Package' ? 'selected' : ''}>Package Deal</option>
                                        <option value="Annual" ${program.priceType === 'Annual' ? 'selected' : ''}>Annual</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <label class="form-label">Registration Fee</label>
                                    <input type="text" class="form-input" value="${program.registrationFee}" 
                                        onchange="updateProgram(${index}, 'registrationFee', this.value)" 
                                        placeholder="e.g., $50">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">What Does the Fee Cover?</label>
                                    <input type="text" class="form-input" value="${program.registrationFeeCovers}" 
                                        onchange="updateProgram(${index}, 'registrationFeeCovers', this.value)" 
                                        placeholder="e.g., Materials, books, admin">
                                </div>
                            </div>
                        </div>

                        <!-- Enrollment -->
                        <div class="section-content" data-section="enrollment">
                            <div class="form-group">
                                <label class="form-label">Enrollment Type</label>
                                <select class="form-select" onchange="updateProgram(${index}, 'enrollmentType', this.value); toggleMidSemester(${index})">
                                    <option value="">Select type</option>
                                    <option value="Open Enrollment" ${program.enrollmentType === 'Open Enrollment' ? 'selected' : ''}>Open Enrollment (Start Anytime)</option>
                                    <option value="Semester Based" ${program.enrollmentType === 'Semester Based' ? 'selected' : ''}>Semester Based</option>
                                    <option value="Session Based" ${program.enrollmentType === 'Session Based' ? 'selected' : ''}>Session Based</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-label">How to Enroll</label>
                                <textarea class="form-textarea" onchange="updateProgram(${index}, 'enrollmentProcess', this.value)" 
                                    placeholder="Steps to enroll - call, online form, in-person, etc.">${program.enrollmentProcess}</textarea>
                            </div>
                            
                            <div class="conditional-fields ${program.enrollmentType === 'Semester Based' ? 'show' : ''}" id="midSemester-${index}">
                                <div class="toggle-group">
                                    <span class="toggle-label">Can Students Start Mid-Semester?</span>
                                    <label class="toggle-switch">
                                        <input type="checkbox" ${program.midSemesterEnrollment ? 'checked' : ''} 
                                            onchange="updateProgram(${index}, 'midSemesterEnrollment', this.checked)">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Mid-Semester Policy</label>
                                    <textarea class="form-textarea" onchange="updateProgram(${index}, 'midSemesterPolicy', this.value)" 
                                        placeholder="Rules for joining mid-semester...">${program.midSemesterPolicy}</textarea>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Price Adjustment for Mid-Semester?</label>
                                    <input type="text" class="form-input" value="${program.midSemesterPriceChange}" 
                                        onchange="updateProgram(${index}, 'midSemesterPriceChange', this.value)" 
                                        placeholder="e.g., Prorated based on remaining weeks">
                                </div>
                            </div>
                        </div>

                        <!-- Details -->
                        <div class="section-content" data-section="details">
                            <div class="form-group">
                                <label class="form-label">Skill Level</label>
                                <select class="form-select" onchange="updateProgram(${index}, 'skillLevel', this.value)">
                                    <option value="">Select level</option>
                                    <option value="None/Beginner" ${program.skillLevel === 'None/Beginner' ? 'selected' : ''}>No Experience Needed</option>
                                    <option value="Some Experience" ${program.skillLevel === 'Some Experience' ? 'selected' : ''}>Some Experience Required</option>
                                    <option value="Intermediate" ${program.skillLevel === 'Intermediate' ? 'selected' : ''}>Intermediate Level</option>
                                    <option value="Advanced" ${program.skillLevel === 'Advanced' ? 'selected' : ''}>Advanced Level</option>
                                    <option value="All Levels" ${program.skillLevel === 'All Levels' ? 'selected' : ''}>All Levels Welcome</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Other Requirements</label>
                                <textarea class="form-textarea" onchange="updateProgram(${index}, 'qualifications', this.value)" 
                                    placeholder="Age requirements, audition needed, materials to bring, etc.">${program.qualifications}</textarea>
                            </div>
                            <div class="form-group">
                                <label class="form-label">What Will Students Learn?</label>
                                <textarea class="form-textarea" style="min-height: 120px;" 
                                    onchange="updateProgram(${index}, 'curriculumDetails', this.value)" 
                                    placeholder="Topics covered, skills developed, materials used, etc.">${program.curriculumDetails}</textarea>
                            </div>
                        </div>

                        <!-- Policies -->
                        <div class="section-content" data-section="policies">
                            <div class="toggle-group">
                                <span class="toggle-label">Parent/Guardian Must Stay for Class?</span>
                                <label class="toggle-switch">
                                    <input type="checkbox" ${program.parentGuardianRequired ? 'checked' : ''} 
                                        onchange="updateProgram(${index}, 'parentGuardianRequired', this.checked)">
                                    <span class="toggle-slider"></span>
                                </label>
                            </div>
                            <div class="toggle-group">
                                <span class="toggle-label">First Lesson Free?</span>
                                <label class="toggle-switch">
                                    <input type="checkbox" ${program.firstFreeLeason ? 'checked' : ''} 
                                        onchange="updateProgram(${index}, 'firstFreeLeason', this.checked)">
                                    <span class="toggle-slider"></span>
                                </label>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Makeup Policy</label>
                                <textarea class="form-textarea" onchange="updateProgram(${index}, 'makeupPolicy', this.value)" 
                                    placeholder="How are missed lessons handled? How much notice is required?">${program.makeupPolicy}</textarea>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Withdrawal Policy</label>
                                <textarea class="form-textarea" onchange="updateProgram(${index}, 'withdrawalPolicy', this.value)" 
                                    placeholder="How to cancel enrollment, notice required, refund policy, etc.">${program.withdrawalPolicy}</textarea>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Other Policies</label>
                                <textarea class="form-textarea" onchange="updateProgram(${index}, 'additionalPolicies', this.value)" 
                                    placeholder="Attendance expectations, dress code, late fees, etc.">${program.additionalPolicies}</textarea>
                            </div>
                        </div>

                        <!-- Links -->
                        <div class="section-content" data-section="links">
                            <div class="form-group">
                                <label class="form-label">Scheduling Link</label>
                                <input type="url" class="form-input" value="${program.schedulingLink}" 
                                    onchange="updateProgram(${index}, 'schedulingLink', this.value)" 
                                    placeholder="https://calendly.com/...">
                                <small style="color: var(--text-light); font-size: 0.75rem; margin-top: 0.25rem; display: block;">Link for scheduling consultations or lessons</small>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Flyer Link</label>
                                <input type="url" class="form-input" value="${program.flyerLink}" 
                                    onchange="updateProgram(${index}, 'flyerLink', this.value)" 
                                    placeholder="https://drive.google.com/...">
                                <small style="color: var(--text-light); font-size: 0.75rem; margin-top: 0.25rem; display: block;">Link to program flyer or brochure</small>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Website Description Link</label>
                                <input type="url" class="form-input" value="${program.websiteDescriptionLink}" 
                                    onchange="updateProgram(${index}, 'websiteDescriptionLink', this.value)" 
                                    placeholder="https://studioweb.com/programs/...">
                                <small style="color: var(--text-light); font-size: 0.75rem; margin-top: 0.25rem; display: block;">Link to program description on studio website</small>
                            </div>
                        </div>

                        <div style="margin-top: 1.5rem; padding-top: 1rem; border-top: 1px solid var(--gray-200); display: flex; gap: 0.75rem; flex-wrap: wrap;">
                            <button class="btn btn-success" onclick="downloadProgramJSON(${index})">
                                <i class="fas fa-download"></i> Download JSON
                            </button>
                            <button class="btn btn-primary" onclick="downloadProgramPDF(${index})">
                                <i class="fas fa-file-pdf"></i> Download PDF
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function updateProgram(index, field, value) {
            programs[index][field] = value;
            
            // Update the title in header if name changed
            if (field === 'name') {
                const header = document.querySelector(`.program-card[data-index="${index}"] .program-card-header h3`);
                if (header) {
                    header.innerHTML = `<span class="program-number">#${index + 1}</span> ${value || 'Untitled Program'}`;
                }
            }
        }

        function switchTab(programIndex, tabName, button) {
            const card = document.querySelector(`.program-card[data-index="${programIndex}"]`);
            
            card.querySelectorAll('.section-tab').forEach(t => t.classList.remove('active'));
            button.classList.add('active');
            
            card.querySelectorAll('.section-content').forEach(c => c.classList.remove('active'));
            card.querySelector(`[data-section="${tabName}"]`).classList.add('active');
        }

        function toggleMidSemester(index) {
            const enrollmentType = programs[index].enrollmentType;
            const midSemesterSection = document.getElementById(`midSemester-${index}`);
            
            if (enrollmentType === 'Semester Based') {
                midSemesterSection.classList.add('show');
            } else {
                midSemesterSection.classList.remove('show');
                programs[index].midSemesterEnrollment = false;
                programs[index].midSemesterPolicy = '';
                programs[index].midSemesterPriceChange = '';
            }
        }

        function duplicateProgram(index) {
            const copy = { ...programs[index], id: Date.now(), name: programs[index].name + ' (Copy)' };
            programs.push(copy);
            activeProgramIndex = programs.length - 1;
            renderPrograms();
            showToast('Program duplicated!', 'success');
        }

        function getProgramExportData(index) {
            const program = programs[index];
            const studioName = document.getElementById('studioName').value;
            const studioLocation = document.getElementById('studioLocation').value;
            
            return {
                studioInfo: {
                    name: studioName,
                    location: studioLocation
                },
                program: {
                    name: program.name,
                    class_size: program.classSize,
                    duration: program.duration,
                    lesson_frequency: program.frequency,
                    status: program.status,
                    price: program.price,
                    price_type: program.priceType,
                    registration_fee: program.registrationFee,
                    registration_fee_covers: program.registrationFeeCovers,
                    enrollment_type: program.enrollmentType,
                    enrollment_process: program.enrollmentProcess,
                    mid_semester_enrollment: program.midSemesterEnrollment,
                    mid_semester_policy: program.midSemesterPolicy,
                    mid_semester_price_change: program.midSemesterPriceChange,
                    skill_level: program.skillLevel,
                    qualifications: program.qualifications,
                    curriculum_details: program.curriculumDetails,
                    makeup_policy: program.makeupPolicy,
                    withdrawal_policy: program.withdrawalPolicy,
                    first_free_lesson: program.firstFreeLeason,
                    parent_guardian_required: program.parentGuardianRequired,
                    additional_policies: program.additionalPolicies,
                    scheduling_link: program.schedulingLink,
                    flyer_link: program.flyerLink,
                    website_description_link: program.websiteDescriptionLink
                },
                exportedAt: new Date().toISOString()
            };
        }

        function downloadProgramJSON(index) {
            const data = getProgramExportData(index);
            const program = programs[index];
            const fileName = `program-${(program.name || 'untitled').toLowerCase().replace(/\s+/g, '-')}-${Date.now()}.json`;
            
            const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = fileName;
            a.click();
            URL.revokeObjectURL(url);
            
            showToast('JSON downloaded!', 'success');
        }

        function downloadAllJSON() {
            if (programs.length === 0) {
                showToast('No programs to download', 'error');
                return;
            }
            
            programs.forEach((_, index) => {
                setTimeout(() => downloadProgramJSON(index), index * 500);
            });
        }

        function downloadProgramPDF(index) {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            const data = getProgramExportData(index);
            const program = data.program;
            const studioInfo = data.studioInfo;
            
            let y = 20;
            const leftMargin = 20;
            const pageWidth = 170;
            const lineHeight = 7;
            
            function checkPageBreak(needed) {
                if (y + needed > 280) {
                    doc.addPage();
                    y = 20;
                }
            }
            
            function addSectionHeader(title) {
                checkPageBreak(15);
                doc.setFillColor(96, 165, 250);
                doc.rect(leftMargin, y, pageWidth, 8, 'F');
                doc.setFontSize(11);
                doc.setFont('helvetica', 'bold');
                doc.setTextColor(255, 255, 255);
                doc.text(title, leftMargin + 3, y + 5.5);
                y += 12;
            }
            
            function addField(label, value) {
                if (!value) return;
                checkPageBreak(15);
                doc.setFontSize(10);
                doc.setFont('helvetica', 'bold');
                doc.setTextColor(113, 128, 150);
                doc.text(label + ':', leftMargin, y);
                y += 5;
                doc.setFont('helvetica', 'normal');
                doc.setTextColor(45, 55, 72);
                const lines = doc.splitTextToSize(String(value), pageWidth);
                lines.forEach(line => {
                    checkPageBreak(7);
                    doc.text(line, leftMargin, y);
                    y += lineHeight;
                });
                y += 2;
            }
            
            // Title
            doc.setFontSize(20);
            doc.setFont('helvetica', 'bold');
            doc.setTextColor(45, 55, 72);
            doc.text(program.name || 'Untitled Program', leftMargin, y);
            y += 8;
            
            // Studio info
            if (studioInfo.name || studioInfo.location) {
                doc.setFontSize(12);
                doc.setFont('helvetica', 'normal');
                doc.setTextColor(113, 128, 150);
                doc.text(`${studioInfo.name}${studioInfo.location ? ' - ' + studioInfo.location : ''}`, leftMargin, y);
                y += 10;
            }
            
            // Basic Info
            addSectionHeader('Basic Information');
            addField('Class Size', program.class_size);
            addField('Duration', program.duration);
            addField('Frequency', program.lesson_frequency);
            addField('Status', program.status);
            
            // Pricing
            addSectionHeader('Pricing');
            addField('Price', program.price);
            addField('Billing Type', program.price_type);
            addField('Registration Fee', program.registration_fee);
            addField('Fee Covers', program.registration_fee_covers);
            
            // Enrollment
            addSectionHeader('Enrollment');
            addField('Enrollment Type', program.enrollment_type);
            addField('How to Enroll', program.enrollment_process);
            if (program.enrollment_type === 'Semester Based') {
                addField('Mid-Semester Enrollment', program.mid_semester_enrollment ? 'Yes' : 'No');
                addField('Mid-Semester Policy', program.mid_semester_policy);
                addField('Price Adjustment', program.mid_semester_price_change);
            }
            
            // Details
            addSectionHeader('Details');
            addField('Skill Level', program.skill_level);
            addField('Requirements', program.qualifications);
            addField('Curriculum', program.curriculum_details);
            
            // Policies
            addSectionHeader('Policies');
            addField('Parent Must Stay', program.parent_guardian_required ? 'Yes' : 'No');
            addField('First Lesson Free', program.first_free_lesson ? 'Yes' : 'No');
            addField('Makeup Policy', program.makeup_policy);
            addField('Withdrawal Policy', program.withdrawal_policy);
            addField('Other Policies', program.additional_policies);
            
            // Links
            if (program.scheduling_link || program.flyer_link || program.website_description_link) {
                addSectionHeader('Links');
                addField('Scheduling Link', program.scheduling_link);
                addField('Flyer Link', program.flyer_link);
                addField('Website Link', program.website_description_link);
            }
            
            // Save
            const fileName = `program-${(program.name || 'untitled').toLowerCase().replace(/\s+/g, '-')}-${Date.now()}.pdf`;
            doc.save(fileName);
            showToast('PDF downloaded!', 'success');
        }

        function downloadAllPDF() {
            if (programs.length === 0) {
                showToast('No programs to download', 'error');
                return;
            }
            
            programs.forEach((_, index) => {
                setTimeout(() => downloadProgramPDF(index), index * 500);
            });
        }

        function clearAll() {
            if (!confirm('Clear all programs? This cannot be undone.')) return;
            
            document.getElementById('studioName').value = '';
            document.getElementById('studioLocation').value = '';
            programs = [];
            addProgram();
            showToast('All cleared', 'success');
        }

        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastMessage = toast.querySelector('.toast-message');
            const toastIcon = toast.querySelector('.toast-icon');
            toast.className = 'toast ' + type;
            toastMessage.textContent = message;
            toastIcon.className = type === 'success' ? 'fas fa-check-circle toast-icon' : 'fas fa-exclamation-circle toast-icon';
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }
    </script>
</body>
</html>
